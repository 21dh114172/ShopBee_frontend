{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shopbee/components/*": ["packages/components/src/*"],
      "@shopbee/services/*": ["packages/services/src/*"],
      "@shopbee/types/*": ["packages/types/src/*"],
      "@shopbee/utils/*": ["packages/utils/src/*"]
    }
  }
}
