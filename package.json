{
  "name": "ShopBee_frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:buyer": "npm run dev --workspace=@shopbee/buyer",
    "dev:seller": "npm run dev --workspace=@shopbee/seller",
    "dev:admin": "npm run dev --workspace=@shopbee/admin",
    "dev:all": "concurrently \"npm run dev:buyer\" \"npm run dev:seller\" \"npm run dev:admin\"",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build --parallel"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^10.0.0",
    "rimraf": "^5.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
